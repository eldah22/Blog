@model SABlog.ViewModels.CategoryCreate

@{
    ViewBag.Title = "Krijo Kategori";
}

<br />

<section class="vh-50 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Krijo Kategori</h3>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4 pb-2 pb-md-0 mb-md-5" })
                        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "needs-validation", @novalidate = true }))
                        {

                            <div class="row">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Name">Emri *</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg", type = "text", @required = true, minLength = "2", maxLength = "10", pattern = "^\\S*$", onkeyup = "removeSpaces(this)" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    <div class="invalid-feedback">Ju lutem plotësoni fushën "Emri"!</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Description">Përshkrimi *</label>
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control form-control-lg", type = "text", @required = true, minLength = "2", maxLength = "1000", pattern = "^[^\\s].*", onkeyup = "removeLeadingSpaces(this)" } })
                                    <div class="invalid-feedback">Ju lutem plotësoni fushën "Përshkrimi"!</div>
                                </div>
                            </div>

             

                            <div class="pt-2">
                                <input class="btn btn-success ms-auto m-2" type="submit" value="Krijo Kategorinë" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })

    });
</script>


<script src="~/Assets/common.js"></script>